<body>
  <div class="login-box">
    <h2>NaifoLogic Giriş</h2>
    <input type="text" id="username" placeholder="Kullanıcı Adı" />
    <input type="password" id="password" placeholder="Şifre" />
    <input type="text" id="code" placeholder="6 Haneli Kod" maxlength="6" />
    <button onclick="girisYap()">Giriş Yap</button>
    <div id="mesaj" class="error"></div>
  </div>

  <script>
    function girisYap() {
      const user = document.getElementById("username").value;
      const pass = document.getElementById("password").value;
      const code = document.getElementById("code").value;

      if (user === "naifo" && pass === "010618" && code === "984147") {
        window.location.href = "dashboard.html";
      } else {
        document.getElementById("mesaj").innerText = "Hatalı giriş bilgileri. Lütfen tekrar deneyin.";
      }
    }
  </script>
</body>
